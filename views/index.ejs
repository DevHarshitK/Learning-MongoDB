<!DOCTYPE html>
<html lang="en">
<%- include("includes/theme.ejs") %>
<title>Messaging App</title>
<body>
    <h3>All Chats</h3>
    <hr>
    <a href="/chats/new">
        <button class="btn btn-primary newChat">New Chat</button>
    </a>
    <% for(let chat of data){ %>
        <div class="chat">
            <p>From: <%= chat.from %></p>
            <p>To: <%= chat.to %></p>
            <p>Message: <%= chat.message %></p>
            <p>Send At:
                <br>
                <%= chat.created_at.toString().split(" ")[4] %> 
                <br>
                <%= chat.created_at.toString().split(" ").splice(0,4).join(" ") %>
                <br> 
            </p>
            <form action="/chats/edit/<%= chat._id %>" style="margin: 4px;">
                <button class="btn">
                    Edit
                </button>
            </form>
            <form method="post" action="/chats/delete/<%= chat._id%>?_method=DELETE">
                <button class="btn">Delete</button>
            </form>
        </div>
    <% } %>
</body>
</html>